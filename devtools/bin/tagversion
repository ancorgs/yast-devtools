#!/bin/bash
# $Id$
usage () {
    echo "tagversion, tag version in git"
    echo "options:"
    echo "  -h, --help:     this help"
    echo "  -c, --check:    check if package is already tagged"
}

OPTIONS=`getopt --name $0 --options hc --longoptions help,check -- "$@"` || { usage; exit 1; }
eval set -- "$OPTIONS"
while true; do
    case "$1" in
	--)
	    shift
	    break
	    ;;
	-h|--help)
	    usage
	    exit
	    ;;
  -c|--check)
	    CHECK=1
	    ;;
    esac
    shift
done

p=`cat RPMNAME`
v=`cat VERSION | tr "." "_"`
if [ -z "$p" -o -z "$v" ]; then
    echo "Cannot find RPMNAME or VERSION in `pwd`"
    exit 1
fi

  # sed -n -e 's///;T;p;q'
  # means: print just the line on which the subst succeeded

BRANCH=`git branch | sed '/^[^\*]/d;s/^\*[[:space:]]*//;'`
if [ "$BRANCH" = "master" ]; then
  t=stable-$v
else
  t=$BRANCH-$v
fi

if [ $CHECK -eq 1 ]; then
  COUNT=`git tag | grep -c $t`
  if [ $COUNT -ge 1 ]; then
    echo "Tag is there."
    exit 0
  else
    echo "Tag missing."
    exit 1
  fi
else
  git tag $t
  git push --tags
fi

